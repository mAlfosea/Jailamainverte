<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
android:layout_marginLeft="@dimen/spacing_5"
android:layout_marginRight="@dimen/spacing_5"
android:layout_marginTop="@dimen/spacing_5">

    <ImageView android:id="@+id/dateSocleImg"
                                                    android:layout_width="@dimen/calendar_item_size"
                                                    android:layout_height="@dimen/calendar_item_size"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView android:id="@+id/dateText"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@id/dateSocleImg"
              app:layout_constraintBottom_toBottomOf="@id/dateSocleImg"
              app:layout_constraintLeft_toLeftOf="@id/dateSocleImg"
              app:layout_constraintRight_toRightOf="@id/dateSocleImg"
              android:text="34"
              android:textSize="@dimen/text_size_24"/>

    <androidx.appcompat.widget.AppCompatTextView android:id="@+id/monthText" android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toBottomOf="@id/dateText"
                                                 app:layout_constraintBottom_toBottomOf="@id/dateSocleImg"
                                                 app:layout_constraintLeft_toLeftOf="@id/dateSocleImg"
                                                 app:layout_constraintRight_toRightOf="@id/dateSocleImg"
                                                 android:text="Jan"
                                                 android:layout_marginBottom="@dimen/spacing_5"/>

    <TextView android:id="@+id/weeklyDay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@id/dateSocleImg"
              app:layout_constraintBottom_toTopOf="@id/dateText"
              app:layout_constraintLeft_toLeftOf="@id/dateSocleImg"
              app:layout_constraintRight_toRightOf="@id/dateSocleImg"
              android:text="Z"
    android:textSize="@dimen/text_size_10"/>

</androidx.constraintlayout.widget.ConstraintLayout>